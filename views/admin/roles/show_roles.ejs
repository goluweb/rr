
<%- include ('../layout/header.ejs') %>


<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                <div class="d-flex justify-content-between">
                  <h4 class="card-title"></h4>
                  <% if(inArray(locals.usersession.roles_id.permission,'addRole')){ %>
                  <a href="/dashboard/add_roles" style="padding:10px; border-radius:5px" class="btn-success"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add Role</a>
                  <% } %>
               </div>
                  <p class="card-description">
                    <!-- Add class <code>.table-bordered</code> -->
                  </p>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered myTable">
                         <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                            Role
                          </th>
                         
                          <th>
                            Action
                          </th>

                        </tr>
                      </thead>


                      <tbody>
                        <%  
                        i=1; 
                        allRoles.forEach(function(role){ 
                        %>
                      
                        <tr>
                          <td>
                           <%= i %>
                          </td>
                          <td>
                            <%= role.roles %>
                          </td>
                        
                          <td>
                         <% if(role.roles != 'admin'){ %> 
                         <% if(inArray(locals.usersession.roles_id.permission,'deleteRole')){ %>
                         <a href="/dashboard/delete_roles/<%= role._id %>" data-toggle="tooltip" data-placement="top" title="delete Button" onclick = "if (! confirm('are you sure you want to delete this roles?')) { return false; }" class="btn btn-primary  btn-sm"><i class="fa fa-trash" aria-hidden="true"></i></a>
                         <% } %>
                         <% } %>
                       
                         <% if(inArray(locals.usersession.roles_id.permission,'editRole')){ %>
                          <a href="/dashboard/edit_roles/<%= role._id %>" data-toggle="tooltip" data-placement="top" title="edit button" style="background-color:blue" class="btn btn-primary  btn-sm"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                          <% } %>

                          </td>
                        
                        </tr>
                       
                       <%
                       i++;
                       });
                       %>
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

            <%- include ('../layout/footer.ejs') %>
